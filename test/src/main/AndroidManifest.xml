<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.lyloou.test">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.SET_WALLPAPER"/>
    <uses-permission android:name="android.permission.SET_WALLPAPER_HINTS"/>

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme.TranslucentStatus"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".media.MediaRecorderActivity"
            android:label="@string/media_audio"/>
        <activity
            android:theme="@style/AppTheme.TranslucentStatus"
            android:name=".kingsoftware.KingsoftwareActivity"
            android:label="@string/kingsoftware_daily_sentence"/>
        <activity
            android:name=".common.WebActivity"
            android:label="@string/my_web"/>
        <activity
            android:theme="@style/AppTheme.TranslucentStatus"
            android:name=".laifudao.TuPianActivity"
            android:label="@string/laifudao_tupian"/>
        <activity
            android:theme="@style/AppTheme.TranslucentStatus"
            android:name=".laifudao.XiaoHuaActivity"
            android:label="@string/laifudao_xiaohua"/>
        <activity
            android:theme="@style/AppTheme.TranslucentStatus"
            android:name=".kingsoftware.KingsoftwareGalleryActivity"
            android:label="@string/kingsoftware_daily_sentence_gallery"/>
        <activity
            android:name=".douban.DouBanActivity"
            android:label="@string/douban_top250"/>
        <activity
            android:theme="@style/AppTheme.TranslucentStatus"
            android:name=".onearticle.OneArticleActivity"
            android:label="@string/meiriyiwen"/>
        <activity
            android:theme="@style/AppTheme.TranslucentStatus"
            android:name=".onearticle.OneArticleRandomActivity"
            android:label="@string/meiriyiwen_random"/>
    </application>

</manifest>